---
import "../styles/global.css";
import Banner from "../components/Banner.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import MiniBanner from "../components/Banner-mini.astro";
import Presentation from '../components/Presentation.astro';
import Slider from "../components/Slider.astro";
import Servicios from "../components/Servicios.astro";

---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Arte y diseño de la madera S.A.S</title>
    <meta
      name="description"
      content="Diseño y Construcción de la madera S.A.S"
    />
    <meta name="keywords" content="Diseño, Construcción, Madera, S.A.S" />
  </head>
  <body>
    <Header />
    <slot />
    <Banner />
    <slot />
    <Servicios />
    <slot />
    <MiniBanner />
    <slot />
    <Presentation />
    <slot />
    <Slider />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
