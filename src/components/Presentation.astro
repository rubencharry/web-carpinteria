---
interface Product {
  title: string;
  description: string;
  image: string;
  discount?: string;
}

const products: Product[] = [
  {
    title: "Light",
    description: "Diseño minimalista para tu espacio",
    image: "/img/presentation/mesa.png",
  },
  {
    title: "Modern",
    description: "Comodidad y estilo contemporáneo",
    image: "/img/presentation/silla.png",
  },
  {
    title: "Classic",
    description: "Elegancia intemporal en cada detalle",
    image: "/img/presentation/sillacomoda.png",
  },
];
---

<div
  class="grid grid-cols-1 gap-4 p-4 max-w-[1536px] mx-auto my-10 items-stretch
         sm:grid-cols-2
         lg:grid-cols-5 lg:grid-rows-5 lg:auto-rows-fr lg:max-h-[600px]"
>
  {/* Producto 1 */}
  <div class="col-span-1 sm:col-span-2 sm:row-span-3 lg:col-span-3 lg:row-span-3">
    <div
      class="bg-wood-light rounded-2xl overflow-hidden transition-transform duration-300 hover:-translate-y-1 flex flex-col lg:flex-row h-full"
    >
      {/* Texto */}
      <div class="w-full lg:w-1/4 p-6 flex flex-col justify-center items-center text-center">
        <h3 class="text-2xl font-semibold text-gray-800 mb-4">
          {products[0].title}
        </h3>
        <p class="text-gray-600 leading-relaxed">{products[0].description}</p>
      </div>

      {/* Imagen */}
      <div class="w-full lg:w-3/4 relative flex items-center justify-center">
        <img
          src={products[0].image}
          alt={products[0].title}
          class="w-full h-full object-contain transition-transform duration-300 hover:scale-105"
        />
      </div>
    </div>
  </div>

  {/* Producto 2 */}
  <div class="col-span-1 lg:col-span-2 lg:row-span-3 lg:col-start-1 lg:row-start-4">
    <div
      class="bg-[#e2e2e2] rounded-2xl overflow-hidden transition-transform duration-300 hover:-translate-y-1 flex flex-col sm:flex-row h-full"
    >
      {/* Imagen */}
      <div class="w-full sm:w-1/2 flex items-center justify-center p-4">
        <img
          src={products[1].image}
          alt={products[1].title}
          class="w-full h-full object-contain transition-transform duration-300 hover:scale-105"
        />
      </div>

      {/* Texto */}
      <div class="w-full sm:w-1/2 flex flex-col justify-center p-6 text-center sm:text-left">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">
          {products[1].title}
        </h3>
        <p class="text-gray-600 leading-relaxed">{products[1].description}</p>
      </div>
    </div>
  </div>

  {/* Producto 3 */}
  <div class="col-span-1 lg:row-span-2 lg:col-start-3 lg:row-start-4 lg:row-end-7">
    <div
      class="bg-gradient-to-b from-cyan-700 to-cyan-900 rounded-2xl overflow-hidden transition-transform duration-300 hover:-translate-y-1 flex flex-col items-center justify-center text-center p-6 h-full"
    >
      <button
        class="bg-orange-400 text-white font-semibold px-4 py-2 rounded-full text-sm mb-4"
      >
        ESCRÍBENOS AHORA
      </button>
      <h3 class="text-2xl font-bold text-white mb-2">¿QUÉ ESPERAS?</h3>
      <p class="text-white text-base opacity-90">Hecho a tu medida</p>
    </div>
  </div>

  {/* Producto 4 */}
  <div class="col-span-1 sm:col-span-2 lg:col-span-2 lg:row-span-5 lg:col-start-4 lg:row-start-1 lg:row-end-7">
    <div
      class="bg-wood-light rounded-2xl overflow-hidden transition-transform duration-300 hover:-translate-y-1 flex flex-col h-full"
    >
      <div
        class="relative aspect-square h-full overflow-hidden flex items-center justify-center"
      >
        <img
          src={products[2].image}
          alt={products[2].title}
          class="w-full h-full object-contain transition-transform duration-300 hover:scale-105"
        />
        {products[2].discount && (
          <span class="absolute top-4 right-4 bg-[#007AFF] text-white px-4 py-2 rounded-full text-sm font-medium">
            {products[2].discount}
          </span>
        )}
      </div>
      <div class="p-6 text-center">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">
          {products[2].title}
        </h3>
        <p class="text-gray-600 leading-relaxed">{products[2].description}</p>
      </div>
    </div>
  </div>
</div>

