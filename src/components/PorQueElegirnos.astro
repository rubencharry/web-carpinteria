<section class="py-16 px-4 bg-[#f8fafc]">
  <div
    class="max-w-6xl mx-auto flex flex-col gap-10 items-center lg:flex-row-reverse lg:items-stretch lg:gap-14"
  >
    <div class="w-full lg:w-1/2" data-animate="image">
      <div
        class="relative rounded-[36px] bg-white shadow-2xl shadow-[#c0a17a]/40 p-2 max-w-[520px] w-full mx-auto"
      >
        <div class="overflow-hidden rounded-[28px] aspect-[4/3] bg-[#f8f1e7]">
          <img
            src="/img/banner/banner-mini.png"
            alt="Equipo de carpintería diseñando espacios únicos"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>

    <div class="w-full lg:w-1/2 space-y-6 text-center lg:text-left" data-animate="text">
      <p class="text-[#c5975c] font-semibold tracking-[0.3em] uppercase text-xs sm:text-sm">
        ¿Por qué elegirnos?
      </p>
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight bg-gradient-to-r from-[#4d2a16] via-[#c5975c] to-[#f0c38e] text-transparent bg-clip-text"
      >
        Transformamos tus sueños en espacios inolvidables
      </h2>
      <p class="text-gray-600 text-base sm:text-lg leading-relaxed">
        Diseños que inspiran, muebles que perduran. En Arte y Diseño de la Madera combinamos
        carpintería artesanal y moderna, con más de 25 años de experiencia para crear ambientes
        únicos que reflejan tu estilo.
      </p>
      <div class="flex justify-center lg:justify-start">
        <a
          href="#contacto"
          class="inline-flex items-center justify-center px-8 py-3 text-white font-semibold rounded-full bg-[#605be5] hover:bg-[#886646] transition-colors duración-300 shadow-lg shadow-black/30"
        >
          Agenda tu valoración
        </a>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  const initWhyUsAnimations = () => {
    const nodes = document.querySelectorAll('[data-animate]');
    if (!nodes.length) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting) return;
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        });
      },
      { threshold: 0.25 }
    );

    nodes.forEach((node) => observer.observe(node));
  };

  document.addEventListener('DOMContentLoaded', initWhyUsAnimations);
  document.addEventListener('astro:page-load', initWhyUsAnimations);
</script>

<style>
  [data-animate] {
    opacity: 0;
    transform: translateX(var(--slide-offset, 0));
    transition: opacity 0.8s ease, transform 0.8s ease;
    will-change: transform, opacity;
  }

  [data-animate="text"] {
    --slide-offset: -200px;
  }

  [data-animate="image"] {
    --slide-offset: 200px;
  }

  [data-animate].is-visible {
    opacity: 1;
    transform: translateX(0);
  }
</style>
